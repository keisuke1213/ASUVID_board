
  
  <div class="container">
    <div class="text-center mt-3">
    <%= form_tag(expressions_path, method: "get") do %>
    <%= text_field_tag :search, params[:search], id: "search-box", placeholder: "キーワードを入力" %>
    <%= submit_tag "検索",id: "search-form" %>
    <% end %>
    </div>
    
    <div class="my-3 text-center">
      <%= link_to "ボランティア", "#",class: "search-link btn btn-success mb-2 mx-2" %>
      <%= link_to "イベント", "#",class: "search-link btn btn-danger mb-2 mx-2" %>
      <%= link_to "その他", "#",class: "search-link btn btn-info mb-2 me-2 mx-2" %>
    </div>
    
  <% @exps.each do |exp| %>
  <%= link_to expression_path(exp.id) do %>
  <div class="row mt-3 justify-content-center">
    <div class="col-md-2 bg-white pt-4 text-center">
        <%= image_tag exp.get_exp_image(150,100) %>
    </div>
    <div class="col-md-4 ps-0 bg-white px-0 ">
      <div class="d-flex justify-content-between">
        <h4 class="mb-3 pt-3"><%= exp.title %></h4>
        <div class="mt-3">
        <% if exp.favorited_by?(current_user) %>
            <%= link_to expression_favorites_path(exp), method: :delete do %>
               <i class="fa-solid fa-heart"></i><%= exp.favorites.count %>いいね
            <% end %>
            <% else %>
            <%= link_to expression_favorites_path(exp), method: :post do %>
               <i class="fa-solid fa-heart"></i><%= exp.favorites.count %>いいね
            <% end %>
          <% end %>
        </div>
      </div>
           <p class="text-body"><%= exp.content.truncate(35) %></p>
           <div class="d-flex justify-content-between" style="width: 50%">
           <p style="color: #DAA520; font-size: 20px"><%= exp.user.name %></p>
           <p style="color: #808080;"><%= l exp.created_at %></p>
          </div>
    </div>
  </div>
  <%= link_to "削除", expression_path(exp), method: :delete, "data-confirm" => "削除しても大丈夫ですか？" %>
  <% end %>
  <% end %>
</div>
<%= paginate @exps %>
</div>
<%= javascript_pack_tag 'link' %>