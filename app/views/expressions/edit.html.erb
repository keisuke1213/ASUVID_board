
<div class="container">
    <div class="row justify-content-center">
        <div class="col-9">
            <h5 class="mt-4">体験記編集フォーム</h5>
            <%= form_with model: @exp do |f| %>

        　　<h6>画像を選択</h6>
            <%= f.file_field :exp_image, placeholder: "画像", accept: "image/*" %>
            
            <h4>活動名</h4>
            <%= f.text_field :title,class: 'form-control' %>
        
            <h4>体験記</h4>
            <%= f.text_area :content,class: 'form-control' %>
            
            
            <%= f.submit '編集',class: "btn btn-success mt-3" %>
          <% end %>

        </div>
    </div>
</div>