<div class="container">
    <div class="row mt-5 justify-content-center">
        <div class="col-lg-4 text-center">
            <%= image_tag @exp.get_exp_image(250,200) %>
        </div>
        <div class="col-lg-3 pt-5 " style="width: 70%;">
            <h2 class="exp-title-name"><%= @exp.title %></h2>
            <p class="exp-title-name  mt-2"><%= @user.name %></p>
            <% if @exp.favorited_by?(current_user) %>
            <%= link_to expression_favorites_path(@exp), method: :delete do %>
               <i class="fa-solid fa-heart"></i><%= @exp.favorites.count %>いいね
            <% end %>
            <% else %>
            <%= link_to expression_favorites_path(@exp), method: :post do %>
               <i class="fa-solid fa-heart"></i><%= @exp.favorites.count %>いいね
            <% end %>
           <% end %>
        </div>
    </div>
    
    <p class="mt-5 mx-auto exp-content" style="width: 50%;"><%= @exp.content %></p>
    <%= link_to "編集" ,edit_expression_path(@exp),class: "btn btn-success mt-3 text-center" %>
    <%= link_to "削除", expression_path(@exp), method: :delete, "data-confirm" => "削除しても大丈夫ですか？", class: "btn btn-success mt-3 text-center" %>
</div>


