<div class="container">
    <div class="row mt-5 pb-2 justify-content-center">
        <div class="col-lg-4 text-center">
            <%= image_tag @exp.get_exp_image(250,200) %>
        </div>
        <div class="col-lg-4 pt-5">
            <h2 class="mt-3 text-center"><%= @exp.title %></h2>
            <div class="mx-auto mt-3 pt-2 d-flex justify-content-between" style="width: 50%">
               <p class="pe-3" style="color: #DAA520; font-size: 20px">
                 <%= link_to user_path(@user.id) do %>
                 <%= @exp.user.name %>
                 <% end %>
               </p>
               <% if @exp.favorited_by?(current_user) %>
                <%= link_to expression_favorites_path(@exp), method: :delete, class: "align-middle" do %>
                   <i class="fa-solid fa-heart"></i><%= @exp.favorites.count %>いいね
                <% end %>
                <% else %>
                <%= link_to expression_favorites_path(@exp), method: :post, class: "align-middle" do %>
                   <i class="fa-solid fa-heart"></i><%= @exp.favorites.count %>いいね
                <% end %>
              <% end %>
              </div>
            </div>
    </div>
    
    <p class="mt-4 mx-auto text-body" style="width: 70%;"><%= @exp.content %></p>
    
     <div class="text-center mt-4 pt-4">
        <%= link_to "編集", edit_expression_path, class: "btn btn-success" %>
        <%= link_to "削除", expression_path(@exp.id), method: :delete, "data-confirm" => "削除しても大丈夫ですか？", class: "btn btn btn-danger " %>
      </div>
    
    
    
    </div>


