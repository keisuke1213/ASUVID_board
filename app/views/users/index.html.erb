<div class="container mx-auto px-2">
    <h6 class="mt-4 text-center">メンバー一覧</h6>
    <div class="mt-3 mb-4 text-center">
      <%= form_tag(users_path, method: "get") do %>
      <%= text_field_tag :search, params[:search], id: "search-box", placeholder: "名前、学年、G、セクションなど" %>
      <%= submit_tag "検索",id: "search-form" %>
     <% end %>
    </div>

    <% @users.each do |user| %>
    <div class="col-lg-5 col-md-10  d-flex mx-auto pt-3 mb-2 justify-content-between">
      <div class="text-center" style="width: 50%">
      <%= link_to user_path(user.id) do %>
        <%= image_tag user.get_profile_image(120,150),class: "pt-3" %>
        <div>
        <%= link_to "編集", edit_user_path(user.id), class: "btn text-primary" %>
        <%= link_to "削除", user_path(user.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn text-primary" %>
       </div>
       <% end %>
      </div> 
      <div class="mx-auto" style="width: 40%;">
        <%= link_to user_path(user.id) do %>
        <p class="mb-0 text-dark"  style="font-size: 10px"><%= user.furigana %></p>
        <p class="mb-0 text-dark"  style="font-size: 15px"><%= user.name %></p>
        <div class="d-flex">
          <p class="mb-0 text-dark" style="font-size: 15px"><%= user.college %></p>
         <p class="mb-0 text-dark" style="font-size: 15px"><%= user.grade %>年</p>
        </div>
         <p class="mb-0 text-dark" style="font-size: 15px"><%= user.course %></p>
         <p class="mb-0 text-dark"><%= user.segment %></p>
         <p class="mb-0 text-dark" style="width: 150%;"><%= user.section %></p>
         <div class="d-flex">
           <p class="text-dark">LINE</p>
           <p class="px-3 text-dark"><%= user.line_name  %></p>
         </div>
      </div>
      <% end %>
    </div>
    <% end %>
</div>  


<%= javascript_pack_tag 'link' %>

