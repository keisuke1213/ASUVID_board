<div class="container">
    <h6 class="mt-4 text-center">メンバー一覧</h6>
    <div class="mt-3 mb-4 text-center">
      <%= form_tag(users_path, method: "get") do %>
      <%= text_field_tag :search, params[:search], id: "search-box", placeholder: "キーワードを入力" %>
      <%= submit_tag "検索",id: "search-form" %>
     <% end %>
    </div>

    <% @users.each do |user| %>
    <div class="d-flex mx-auto mt-2 mb-2 justify-content-between" style="width: 350px">
      <div class="text-center">
      <%= link_to user_path(user.id) do %>
        <%= image_tag user.get_profile_image(150,150) %>
        <%= link_to "編集", edit_user_path(user.id), class: "btn text-primary" %>
        <%= link_to "削除", user_path(user.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn text-primary" %>
       <% end %>
      </div> 
      <div class="mx-auto" style="width: 50%;">
        <%= link_to user_path(user.id) do %>
        <p class="mb-0 text-dark"  style="font-size: 15px"><%= user.name %></p>
        <div class="d-flex">
         <p class="mb-0 text-dark" style="font-size: 15px"><%= user.grade %>年</p>
         <p class="mb-0 px-3 text-dark" style="font-size: 15px"><%= user.course %></p>
        </div>
         <p class="mb-0 text-dark"><%= user.segment %>G</p>
         <p class="mb-0 text-dark" style="width: 150%;"><%= user.section %>セクション</p>
         <div class="d-flex">
           <p>趣味</p>
           <p class="mb-0 text-dark"><%= user.hobby %></p>
         </div>
         <div class="d-flex">
           <p class="text-dark">LINE</p>
           <p class="px-3 text-dark"><%= user.line_name  %></p>
         </div>
      </div>
      <% end %>
    </div>
    <% end %>
</div>  

<%= javascript_pack_tag 'link' %>