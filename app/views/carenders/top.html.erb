<div class="col-10 mx-auto">
     <%= month_calendar(events: @posts) do |date, posts| %>
        <%= date.day %>
        <% posts.each do |post| %>
        <div>
          <p class="bg-danger text-white mx-auto" style="width: 80px;"><%= post.title %></p>
          <p class="bg-danger text-white mx-auto" style="width: 80px;"><%= l post.deadline, format: :short %></p>
          
        </div>
      <% end %>
     <% end %>
</div>

