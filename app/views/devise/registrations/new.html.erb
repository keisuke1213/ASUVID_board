<div class="container">
 <div class="row justify-content-center">
  <div vclass="col-9">
   <h5 class="mt-3">新規登録</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <h6 class="mt-2">プロフィール画像</h6>
  <%= f.file_field :profile_image, placeholder: "画像", accept: "image/*" %>
  
  <div class="field">
   <%= f.label :name,"名前",class: "mt-3" %><br>
   <%= f.text_field :name, autofocus: true,class: 'form-control'  %>
  </div>
  
  <div class="field">
   <%= f.label :grade,"学年",class: "mt-3" %><br>
   <%= f.text_field :grade,class: 'form-control' %>
  </div>
  
  <div class="field">
   <%= f.label :course,"学部(法学部と文学部は学科も記入してください!)",class: "mt-3" %><br>
   <%= f.text_field :course, placeholder: "例）法学部政治学科、文学部英文学科",class: 'form-control' %>
  </div>
  
  <div class="field">
   <%= f.label :line_name,"LINE名",class: "mt-3" %><br>
   <%= f.text_field :line_name,class: 'form-control' %>
  </div>
  
  <div class="field">
   <%= f.label :segment,"所属G",class: "mt-3" %><br>
   <div class="d-flex">
    <%= f.text_field :segment ,class: 'form-control', style: "width: 100px;" %>
    <h5 class="px-2 pt-2">G</h5>
   </div>
   
  </div>
  
  <div class="field">
   <%= f.label :section,"セクション",class: "mt-3" %><br>
   <%= f.text_field :section,class: 'form-control' %>
  </div>
  
  <div class="field">
   <%= f.label :hobby,"趣味",class: "mt-3" %><br>
   <%= f.text_field :hobby,class: 'form-control' %>
  </div>
  
  <div class="field">
   <%= f.label :email,"メールアドレス",class: "mt-3" %><br>
   <%= f.email_field :email, autocomplete: "email",class: 'form-control' %> 
 </div>
  


  <div class="field">
    <%= f.label :password,"パスワード",class: "mt-3" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード確認用",class: "mt-3" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control' %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Sign up" ,class: "btn btn-success" %>
  </div>
<% end %>
  </div>
 </div>
</div>


<%= render "devise/shared/links" %>
