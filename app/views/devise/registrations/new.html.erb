<div class="container">
 <div class="row justify-content-center">
  <div vclass="col-9">
   <h5 class="mt-3">新規登録</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <h6 class="mt-2">プロフィール画像</h6>
  <%= f.file_field :profile_image, placeholder: "画像", accept: "image/*" %>
  
  <div class="field">
   <%= f.label :furigana,"名前(ひらがな）",class: "mt-3" %><br>
   <%= f.text_field :furigana, autofocus: true,class: 'form-control'  %>
  </div>
  
  <div class="field">
   <%= f.label :name,"名前(漢字)",class: "mt-3" %><br>
   <%= f.text_field :name, autofocus: true,class: 'form-control'  %>
  </div>
  
  <div class="field">
   <%= f.label :grade,"学年",class: "mt-3" %><br>
   <%= f.select :grade, (1..4).map { |n| [n, n] }, { prompt: "選択してください" }, class: "form-control" %>

  </div>
  
  <div class="field">
   <%= f.label :college,"大学",class: "mt-3" %><br>
   <%= f.text_field :college,value: "大学",class: 'form-control' %>
  </div>
  
  <div class="field">
   <%= f.label :course,"学部(法学部と文学部は学科も記入してください!)",class: "mt-3" %><br>
   <%= f.text_field :course, placeholder: "例）法学部政治学科、文学部英文学科",class: 'form-control' %>
  </div>
  
  <div class="field">
   <%= f.label :line_name,"LINE名",class: "mt-3" %><br>
   <%= f.text_field :line_name,class: 'form-control' %>
  </div>
  
  <div class="field">
   <%= f.label :segment, "所属G",class: "mt-3" %><br>
   <div class="d-flex">
    <%= f.select :segment, options_for_select(["ふみG", "かのG", "みつこG", "よしかG", "みずきG", "ともやG", "あやねG", "いくみんG", "のぶG","無所属"]), {}, class: 'form-control' %>
    <h5 class="px-2 pt-2"></h5>
   </div>
   
  </div>
  
  <div class="field">
   <%= f.label :section,"セクション",class: "mt-3" %><br>
   <%= f.select :section, options_for_select(["","地域活性化", "消費生活こども", "減災防災", "国際協力", "ほっこりはあと出町", "迦陵園", "西陣児童館", "京都こどもクッキング", "ママキラ", "環境保護"]), {}, class: 'form-control' %>

  </div>
  
  
  <div class="field">
   <%= f.label :email,"メールアドレス",class: "mt-3" %><br>
   <%= f.email_field :email, autocomplete: "email",class: 'form-control' %> 
 </div>
  


  <div class="field">
    <%= f.label :password,"パスワード",class: "mt-3" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード確認用",class: "mt-3" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: 'form-control' %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Sign up" ,class: "btn btn-success" %>
  </div>
<% end %>
  </div>
 </div>
</div>


<%= render "devise/shared/links" %>
