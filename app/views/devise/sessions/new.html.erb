<div class="container">
  <div class="row justify-content-center">
    <div class="col-9">
      <h5 class="mt-3">ログイン</h5>
      <%= form_with model: @user, url: user_session_path do |f| %>
       <div class="field">
         <%= f.label :name,"名前", class: "" %><br />
         <%= f.text_field :name, autofocus: true, autocomplete: "name",class: 'form-control', style: "width: 200px;" %>
       </div> 
      
        <div class="field">
          <%= f.label :password,"パスワード", class: "mt-3" %><br />
          <%= f.password_field :password, autocomplete: "current-password",class: 'form-control', style: "width: 200px;" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field text-cneter">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
